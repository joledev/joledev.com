---
import BaseLayout from '../layouts/BaseLayout.astro';

// Try to detect language from referrer or default to 'es'
const lang = Astro.url.pathname.startsWith('/en') ? 'en' : 'es';
const isEs = lang === 'es';
---

<BaseLayout title={isEs ? 'P치gina no encontrada' : 'Page not found'} description={isEs ? 'La p치gina que buscas no existe.' : "The page you're looking for doesn't exist."}>
  <section class="flex min-h-[60vh] items-center justify-center px-4 py-20">
    <div class="text-center">
      <p class="font-display text-7xl font-bold text-accent-primary sm:text-9xl">404</p>
      <h1 class="mt-4 font-display text-2xl font-bold sm:text-3xl">
        {isEs ? 'P치gina no encontrada' : 'Page not found'}
      </h1>
      <p class="mt-3 text-text-secondary">
        {isEs ? 'Lo sentimos, la p치gina que buscas no existe o fue movida.' : "Sorry, the page you're looking for doesn't exist or has been moved."}
      </p>
      <a
        href={isEs ? '/es/' : '/en/'}
        class="mt-8 inline-block rounded-lg bg-accent-primary px-6 py-3 font-medium text-white transition-opacity hover:opacity-90"
      >
        {isEs ? 'Volver al inicio' : 'Back to home'}
      </a>
    </div>
  </section>
</BaseLayout>
