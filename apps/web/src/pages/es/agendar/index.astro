---
import BaseLayout from '../../../layouts/BaseLayout.astro';
import Scheduler from '../../../components/scheduler/Scheduler.svelte';

const apiUrl = import.meta.env.PUBLIC_API_URL || '';
---

<BaseLayout title="Agenda una reunión" description="Agenda una reunión presencial o por videollamada para discutir tu proyecto.">
  <section class="px-4 py-16 sm:px-6 sm:py-20 lg:px-8">
    <div class="mx-auto max-w-4xl">
      <Scheduler client:load lang="es" apiUrl={apiUrl} />
    </div>
  </section>
</BaseLayout>
