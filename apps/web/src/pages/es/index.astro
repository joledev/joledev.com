---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Hero from '../../components/hero/Hero.astro';
import Services from '../../components/services/Services.astro';
import About from '../../components/about/About.astro';
import Experience from '../../components/experience/Experience.astro';
import ProjectGrid from '../../components/portfolio/ProjectGrid.astro';
import RecentPosts from '../../components/blog/RecentPosts.astro';
import CallToAction from '../../components/cta/CallToAction.astro';
import QuoterModal from '../../components/quoter/QuoterModal.svelte';
import StructuredData from '../../components/seo/StructuredData.astro';

const apiUrl = import.meta.env.PUBLIC_API_URL || '';
---

<BaseLayout
  title="Inicio"
  description="Desarrollo tecnológico a la medida de tu negocio. Soluciones digitales para empresas de cualquier tamaño en México y el mundo."
  keywords="desarrollador web ensenada, programador baja california, sistemas administrativos ensenada, desarrollo software mexico"
>
  <StructuredData type="website" />
  <StructuredData type="service" />
  <Hero />
  <Services />
  <About />
  <Experience />
  <ProjectGrid />
  <RecentPosts />
  <CallToAction />
  <QuoterModal client:idle lang="es" apiUrl={apiUrl} />
</BaseLayout>
