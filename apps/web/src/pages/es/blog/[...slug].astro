---
import { getCollection, render } from 'astro:content';
import BlogLayout from '../../../layouts/BlogLayout.astro';

export async function getStaticPaths() {
  const allPosts = await getCollection('blog');
  const esPosts = allPosts
    .filter((p) => p.data.lang === 'es' && !p.data.draft)
    .sort((a, b) => a.data.pubDate.getTime() - b.data.pubDate.getTime());

  return esPosts.map((post, i) => {
    const slug = post.id.replace(/^es\//, '');
    const prev = esPosts[i - 1];
    const next = esPosts[i + 1];
    return {
      params: { slug },
      props: {
        post,
        prevPost: prev ? { slug: prev.id.replace(/^es\//, ''), title: prev.data.title } : null,
        nextPost: next ? { slug: next.id.replace(/^es\//, ''), title: next.data.title } : null,
      },
    };
  });
}

const { post, prevPost, nextPost } = Astro.props;
const { Content, headings } = await render(post);
---

<BlogLayout
  title={post.data.title}
  description={post.data.description}
  pubDate={post.data.pubDate}
  updatedDate={post.data.updatedDate}
  heroImage={post.data.heroImage}
  tags={post.data.tags}
  category={post.data.category}
  headings={headings}
  prevPost={prevPost}
  nextPost={nextPost}
>
  <Content />
</BlogLayout>
