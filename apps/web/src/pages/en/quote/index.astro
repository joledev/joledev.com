---
import BaseLayout from '../../../layouts/BaseLayout.astro';
import Quoter from '../../../components/quoter/Quoter.svelte';

const apiUrl = import.meta.env.PUBLIC_API_URL || '';
---

<BaseLayout title="Get a Quote" description="Get an estimated budget for your software development project.">
  <section class="px-4 py-16 sm:px-6 sm:py-20 lg:px-8">
    <div class="mx-auto max-w-4xl">
      <Quoter client:load lang="en" apiUrl={apiUrl} />
    </div>
  </section>
</BaseLayout>
