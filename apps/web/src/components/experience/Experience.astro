---
import ScrollReveal from '../ui/ScrollReveal.svelte';
import TextReveal from '../ui/TextReveal.svelte';
import { getLangFromUrl, useTranslations } from '../../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<section id={lang === 'es' ? 'experiencia' : 'experience'} class="bg-bg-secondary px-4 py-20 sm:px-6 lg:px-8">
  <div class="mx-auto max-w-4xl">
    <div class="text-center">
      <TextReveal
        client:visible
        text={t.experience.title}
        tag="h2"
        effect="clipReveal"
        mode="words"
        class="font-display text-3xl font-bold sm:text-4xl"
      />
    </div>

    <div class="timeline mt-14">
      {t.experience.items.slice(0, 4).map((item, i) => (
        <ScrollReveal client:visible direction="up" delay={i * 0.08}>
          <div class="timeline-item">
            <div class="timeline-dot" />
            <div class="timeline-card">
              <div class="card-header">
                {item.logo ? (
                  <div class="company-logo">
                    <img
                      src={item.logo}
                      alt={item.company}
                      width="48"
                      height="48"
                      loading="lazy"
                    />
                  </div>
                ) : (
                  <div class="company-logo company-logo--fallback">
                    <span>{item.company.charAt(0)}</span>
                  </div>
                )}
                <div class="card-info">
                  <div class="card-top-row">
                    <h3 class="font-display text-lg font-bold text-text-primary">
                      {item.company}
                    </h3>
                    <span class="period-badge">{item.period}</span>
                  </div>
                  <div class="card-role-row">
                    <span class="role-text">{item.role}</span>
                    <span class="type-badge">{item.type}</span>
                  </div>
                </div>
              </div>

              <p class="mt-3 text-sm leading-relaxed text-text-secondary">
                {item.description}
              </p>

              {item.highlights && item.highlights.length > 0 && (
                <details class="highlights-details">
                  <summary class="highlights-summary">
                    {lang === 'es' ? 'Productos construidos' : 'Products built'} ({item.highlights.length})
                    <span class="highlights-chevron">&rsaquo;</span>
                  </summary>
                  <ul class="highlights-list">
                    {item.highlights.map((h: string) => (
                      <li>{h}</li>
                    ))}
                  </ul>
                </details>
              )}

              <div class="mt-3 flex flex-wrap gap-1.5">
                {item.products.map((product: string) => (
                  <span class="product-tag">{product}</span>
                ))}
              </div>

              <div class="mt-2 flex flex-wrap gap-1.5">
                {item.stack.map((tech: string) => (
                  <span class="stack-tag">{tech}</span>
                ))}
              </div>
            </div>
          </div>
        </ScrollReveal>
      ))}

      <!-- Extra experience (hidden by default, kept in DOM for SEO) -->
      <div id="extra-experience" class="extra-experience collapsed">
        {t.experience.items.slice(4).map((item, i) => (
          <ScrollReveal client:visible direction="up" delay={(i + 4) * 0.08}>
            <div class="timeline-item">
              <div class="timeline-dot" />
              <div class="timeline-card">
                <div class="card-header">
                  {item.logo ? (
                    <div class="company-logo">
                      <img
                        src={item.logo}
                        alt={item.company}
                        width="48"
                        height="48"
                        loading="lazy"
                      />
                    </div>
                  ) : (
                    <div class="company-logo company-logo--fallback">
                      <span>{item.company.charAt(0)}</span>
                    </div>
                  )}
                  <div class="card-info">
                    <div class="card-top-row">
                      <h3 class="font-display text-lg font-bold text-text-primary">
                        {item.company}
                      </h3>
                      <span class="period-badge">{item.period}</span>
                    </div>
                    <div class="card-role-row">
                      <span class="role-text">{item.role}</span>
                      <span class="type-badge">{item.type}</span>
                    </div>
                  </div>
                </div>

                <p class="mt-3 text-sm leading-relaxed text-text-secondary">
                  {item.description}
                </p>

                {item.highlights && item.highlights.length > 0 && (
                  <details class="highlights-details">
                    <summary class="highlights-summary">
                      {lang === 'es' ? 'Productos construidos' : 'Products built'} ({item.highlights.length})
                      <span class="highlights-chevron">&rsaquo;</span>
                    </summary>
                    <ul class="highlights-list">
                      {item.highlights.map((h: string) => (
                        <li>{h}</li>
                      ))}
                    </ul>
                  </details>
                )}

                <div class="mt-3 flex flex-wrap gap-1.5">
                  {item.products.map((product: string) => (
                    <span class="product-tag">{product}</span>
                  ))}
                </div>

                <div class="mt-2 flex flex-wrap gap-1.5">
                  {item.stack.map((tech: string) => (
                    <span class="stack-tag">{tech}</span>
                  ))}
                </div>
              </div>
            </div>
          </ScrollReveal>
        ))}
      </div>
    </div>

    <div class="mt-6 text-center">
      <button
        id="toggle-experience"
        type="button"
        class="toggle-btn"
        data-show-label={lang === 'es' ? 'Ver experiencia completa' : 'See full experience'}
        data-hide-label={lang === 'es' ? 'Ocultar' : 'Hide'}
      >
        {lang === 'es' ? 'Ver experiencia completa' : 'See full experience'}
        <svg class="toggle-chevron" xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polyline points="6 9 12 15 18 9"/></svg>
      </button>
    </div>
  </div>
</section>

<script>
  const btn = document.getElementById('toggle-experience');
  const extra = document.getElementById('extra-experience');

  if (btn && extra) {
    const showLabel = btn.dataset.showLabel!;
    const hideLabel = btn.dataset.hideLabel!;
    const chevron = btn.querySelector('.toggle-chevron');

    btn.addEventListener('click', () => {
      const isCollapsed = extra.classList.contains('collapsed');
      extra.classList.toggle('collapsed');

      if (chevron) {
        chevron.style.transform = isCollapsed ? 'rotate(180deg)' : '';
      }

      // Update button text (preserve the SVG)
      btn.childNodes[0].textContent = isCollapsed ? hideLabel + ' ' : showLabel + ' ';
    });
  }
</script>

<style>
  .timeline {
    position: relative;
    padding-left: 2rem;
  }

  .timeline::before {
    content: '';
    position: absolute;
    left: 0.4375rem;
    top: 0.5rem;
    bottom: 0.5rem;
    width: 1px;
    background: var(--color-border);
  }

  .timeline-item {
    position: relative;
    padding-bottom: 1.5rem;
  }

  .timeline-item:last-child {
    padding-bottom: 0;
  }

  .timeline-dot {
    position: absolute;
    left: -1.625rem;
    top: 1.25rem;
    width: 0.625rem;
    height: 0.625rem;
    border-radius: 50%;
    background: var(--color-secondary-primary);
    box-shadow: 0 0 0 3px var(--color-bg-secondary);
  }

  .timeline-card {
    padding: 1.25rem 1.5rem;
    border-radius: 1rem;
    background: var(--color-glass);
    backdrop-filter: blur(12px);
    border: 1px solid var(--color-glass-border);
    transition: border-color 0.2s ease;
  }

  .timeline-card:hover {
    border-color: var(--color-secondary-light);
  }

  .card-header {
    display: flex;
    align-items: flex-start;
    gap: 0.875rem;
  }

  .company-logo {
    flex-shrink: 0;
    width: 3rem;
    height: 3rem;
    border-radius: 0.625rem;
    overflow: hidden;
    background: #fff;
    border: 1px solid var(--color-border);
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .company-logo img {
    width: 100%;
    height: 100%;
    object-fit: contain;
    padding: 0.25rem;
  }

  .company-logo--fallback {
    background: #fff;
  }

  .company-logo--fallback span {
    font-family: var(--font-display);
    font-size: 1.25rem;
    font-weight: 700;
    color: var(--color-secondary-primary);
  }

  .card-info {
    flex: 1;
    min-width: 0;
  }

  .card-top-row {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 0.5rem;
    flex-wrap: wrap;
  }

  .period-badge {
    font-size: 0.75rem;
    font-weight: 500;
    color: var(--color-text-muted);
    white-space: nowrap;
  }

  .card-role-row {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    margin-top: 0.125rem;
    flex-wrap: wrap;
  }

  .role-text {
    font-size: 0.875rem;
    font-weight: 600;
    color: var(--color-secondary-primary);
  }

  .type-badge {
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    padding: 0.125rem 0.5rem;
    border-radius: 9999px;
    background: var(--color-secondary-subtle);
    color: var(--color-secondary-primary);
  }

  .highlights-details {
    margin-top: 0.75rem;
    border-top: 1px solid var(--color-border);
    padding-top: 0.625rem;
  }

  .highlights-summary {
    display: flex;
    align-items: center;
    gap: 0.375rem;
    font-size: 0.8125rem;
    font-weight: 600;
    color: var(--color-secondary-primary);
    cursor: pointer;
    list-style: none;
    user-select: none;
  }

  .highlights-summary::-webkit-details-marker {
    display: none;
  }

  .highlights-chevron {
    display: inline-block;
    font-size: 1rem;
    line-height: 1;
    transition: transform 0.2s ease;
  }

  details[open] .highlights-chevron {
    transform: rotate(90deg);
  }

  .highlights-list {
    margin: 0.5rem 0 0;
    padding: 0;
    list-style: none;
    display: flex;
    flex-direction: column;
    gap: 0.375rem;
  }

  .highlights-list li {
    font-size: 0.8125rem;
    line-height: 1.5;
    color: var(--color-text-secondary);
    padding-left: 1.25rem;
    position: relative;
  }

  .highlights-list li::before {
    content: 'âœ“';
    position: absolute;
    left: 0;
    color: var(--color-secondary-primary);
    font-weight: 700;
    font-size: 0.75rem;
  }

  .product-tag {
    font-size: 0.75rem;
    font-weight: 500;
    padding: 0.125rem 0.625rem;
    border-radius: 0.375rem;
    background: var(--color-secondary-subtle);
    color: var(--color-secondary-primary);
    border: 1px solid color-mix(in srgb, var(--color-secondary-primary) 15%, transparent);
  }

  .stack-tag {
    font-size: 0.75rem;
    font-weight: 500;
    padding: 0.0625rem 0.5rem;
    border-radius: 0.25rem;
    background: var(--color-bg-secondary);
    color: var(--color-text-muted);
    border: 1px solid var(--color-border);
    font-family: var(--font-mono);
  }

  .extra-experience {
    overflow: hidden;
    max-height: 3000px;
    opacity: 1;
    transition: max-height 0.5s ease, opacity 0.3s ease;
  }

  .extra-experience.collapsed {
    max-height: 0;
    opacity: 0;
  }

  .toggle-btn {
    display: inline-flex;
    align-items: center;
    gap: 0.375rem;
    padding: 0.5rem 1.25rem;
    border-radius: 9999px;
    border: 1px solid var(--color-border);
    background: transparent;
    color: var(--color-text-secondary);
    font-size: 0.875rem;
    font-weight: 500;
    cursor: pointer;
    transition: all 0.2s;
    font-family: var(--font-sans);
  }

  .toggle-btn:hover {
    background: var(--color-secondary-subtle);
    border-color: var(--color-secondary-light);
    color: var(--color-secondary-primary);
  }

  .toggle-chevron {
    transition: transform 0.3s ease;
  }
</style>
